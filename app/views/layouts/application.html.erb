<!DOCTYPE html>
<html>
  <head>
    <title>NFL Stats</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav>
      <% if user_signed_in? %>
        <li>
          <span>
            <%= current_user.first_name %> <%= current_user.last_name %>
          </span>
        </li>
        <li><%= link_to 'Edit Profile', edit_user_registration_path %></li>
        <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
        <li><%= link_to image_tag("#{current_user.team.abbreviation}.jpg", size: "70x50"), team_path(current_user.team.id) %></li>
      <% else %>
        <li><%= link_to 'Sign In', new_user_session_path %></li>
        <li><%= link_to 'Sign Up', new_user_registration_path %></li>
      <% end %>
    </nav>

    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>
    <%= link_to 'Home', teams_path %><br/>
    <%= link_to 'Stats', stats_path(side: "offense") %>
    <% if @seasons.nil? || (@seasons.length > 1) %>
      <% @season_selected = "2001-2016" %>
    <% else %>
      <% @season_selected = @seasons[0] %>
    <% end %>
    <%= form_for :games_by_season, url: games_path, method: :get do |f| %>
      <%= f.label :games_by_season, "Games by Season" %>
      <%= f.select :season, (["2001-2016"] + @season_collection), selected: @season_selected %>
      <%= f.submit "Go", id: "games_button" %>
    <% end %>
    <%= form_for :teams, url: team_path("dropdown_selection"), method: :get do |f| %>
      <%= f.label :teams, "Teams" %>
      <%= f.select :name, @team_collection, selected: @team_name %>
      <%= f.submit "Go", id: "teams_button" %>
    <% end %>
    <%= yield %>
    <% if user_signed_in? %>
      <p><%= link_to 'Add Game', new_game_path %></p>
    <% end %>
  </body>
</html>
