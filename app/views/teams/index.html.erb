<h2 align="center" class="text">Teams</h2>

<div class="row text">
  <div class="small-1 large-2 columns sidebar"></div>
  <% ["NFC","AFC"].each do |conference| %>
    <div class="conference small-2 large-4 columns">
      <% Team::DIVISIONS.each do |division| %>
        <% if division.include?(conference) %>
          <h3 align="center"><%= division %></h3>
          <% @teams.where(division: division).each do |team| %>
            <% if team.division == division %>
              <span align="center" class=<%= team_class(team) %>>
                <%= link_to "#{team.location} #{team.name}", team_path(team.id) %>
              </span><br />
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  <% end %>
  <div class="small-1 large-2 columns sidebar"><p></p></div>
</div>
