<h1><%= "#{@team.location} #{@team.name}" %></h1>

<h3>Games</h3>

<ul>
  <% (2001..2016).to_a.reverse.each do |year| %>
    <% if @games.pluck(:season).include?(year) %>
      <li>
        <h4><%= year %></h4>
        <% @games.reverse.each do |game| %>
          <% if game.season == year %>
            <%= "Week #{game.week}: #{game.away_team.name} #{game.away_score} @ #{game.home_team.name} #{game.home_score}" %><br/>
          <% end %>
        <% end %>
      </li>
    <% end %>
  <% end %>
</ul>
