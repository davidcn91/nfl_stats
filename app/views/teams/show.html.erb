<h1><%= "#{@team.location} #{@team.name}" %></h1>

<h3>Games</h3>

<ul>
  <% (2001..2016).to_a.reverse.each do |year| %>
    <% if @games.pluck(:season).include?(year) %>
      <li>
        <h4><%= year %></h4>
        <% @games.reverse.each do |game| %>
          <% if game.season == year %>
            <%= "Week #{game.week}: #{game.away_team.name} #{game.away_score} @ #{game.home_team.name} #{game.home_score}" %>
            <% if game.stat.nil? %>
              <%= link_to "Add Stats", new_game_stat_path(game.id) %>
            <% else %>
              <%= link_to "Show Stats", game_stat_path(game.id) %>
            <% end %>
            <% if user_signed_in? && ((current_user.id == game.user_id) || current_user.role == "admin") %>
              <br /><%= link_to "Edit Game", edit_game_path(game.id) %>
              <%= button_to "Delete Game", game, method: :delete %>
            <% end %>
            <br />
          <% end %>
        <% end %>
      </li>
    <% end %>
  <% end %>
</ul>
