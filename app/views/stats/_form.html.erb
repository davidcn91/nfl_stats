        <%= s.text_field :away_yards %>
      </div>

      <div class="row">
        <%= s.label :away_third_down_conversions, "Third Down Conversions", class: "text" %>
        <%= s.text_field :away_third_down_conversions %>
      </div>

      <div class="row">
        <%= s.label :away_third_down_attempts, "Third Down Attempts", class: "text" %>
        <%= s.text_field :away_third_down_attempts %>
      </div>

      <div class="row">
        <%= s.label :away_penalties, "Penalties", class: "text" %>
        <%= s.text_field :away_penalties %>
      </div>

      <div class="row">
        <%= s.label :away_penalty_yards, "Penalty Yards", class: "text" %>
        <%= s.text_field :away_penalty_yards %>
      </div>

      <div class="row">
        <%= s.label :away_rushes, "Rush Attempts", class: "text" %>
        <%= s.text_field :away_rushes %>
      </div>

      <div class="row">
        <%= s.label :away_rushing_yards, "Rushing Yards", class: "text" %>
        <%= s.text_field :away_rushing_yards %>
      </div>

      <div class="row">
        <%= s.label :away_passes, "Pass Attempts", class: "text" %>
        <%= s.text_field :away_passes %>
      </div>

      <div class="row">
        <%= s.label :away_completions, "Completions", class: "text" %>
        <%= s.text_field :away_completions %>
      </div>

      <div class="row">
        <%= s.label :away_passing_yards, "Passing Yards", class: "text" %>
        <%= s.text_field :away_passing_yards %>
      </div>

      <div class="row">
        <%= s.label :away_fumbles, "Fumbles", class: "text" %>
        <%= s.text_field :away_fumbles %>
      </div>

      <div class="row">
        <%= s.label :away_fumbles_lost, "Fumbles Lost", class: "text" %>
        <%= s.text_field :away_fumbles_lost %>
      </div>

      <div class="row">
        <%= s.label :away_interceptions, "Interceptions Thrown", class: "text" %>
