<div class="row text">
  <%= form_for [@game, @stat] do |s| %>
    <div class="small-12 large-6 columns space left">
      <h3>Away Team Stats</h3>

      <div class="row">
        <%= s.label :away_plays, "Plays from Scrimmage", class: "text" %>
        <%= s.text_field :away_plays %>
      </div>

