      <h3>Home Team Stats</h3>

      <div class="row">
        <%= s.label :home_plays, "Plays from Scrimmage", class: "text" %>
        <%= s.text_field :home_plays %>
      </div>

      <div class="row">
        <%= s.label :home_yards, "Total Yards", class: "text" %>
        <%= s.text_field :home_yards %>
      </div>

      <div class="row">
        <%= s.label :home_third_down_conversions, "Third Down Conversions", class: "text" %>
        <%= s.text_field :home_third_down_conversions %>
      </div>

      <div class="row">
