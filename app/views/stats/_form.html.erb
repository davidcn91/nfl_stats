      </div>

      <div class="row">
        <%= s.label :home_rushes, "Rush Attempts", class: "text" %>
        <%= s.text_field :home_rushes %>
      </div>

      <div class="row">
        <%= s.label :home_rushing_yards, "Rushing Yards", class: "text" %>
        <%= s.text_field :home_rushing_yards %>
      </div>

      <div class="row">
        <%= s.label :home_passes, "Pass Attempts", class: "text" %>
        <%= s.text_field :home_passes %>
      </div>

      <div class="row">
        <%= s.label :home_completions, "Completions", class: "text" %>
        <%= s.text_field :home_completions %>
      </div>

      <div class="row">
        <%= s.label :home_passing_yards, "Passing Yards", class: "text" %>
