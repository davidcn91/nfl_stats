<h1>Stats</h1>
<h5><i>(Games where no stats have been added are not included)</i></h5>

<strong><%= @side.capitalize %></strong><br/>
<% if @side == "offense" %>
  <% new_side = "defense" %>
<% else %>
  <% new_side = "offense" %>
<% end %>
  <%= link_to "View #{new_side[0,new_side.length-1].capitalize}ive Stats", side: new_side %>
<table>
  <tr>
    <% @categories.each do |category| %>
      <th><%= link_to category[0], sort: category[1], side: @side, current_sort: @sort, order: @order %></th>
    <% end %>
  </tr>
  <% @teams.each do |team| %>
    <tr>
      <td><%= link_to team.name, team_path(team.id) %></td>
      <td><%= team.games %></td>
      <td><%= team.points(@side) %></td>
      <td><%= '%.1f' % (team.points_per_game(@side)) %></td>
      <td><%= team.plays(@side) %></td>
      <td><%= '%.1f' % (team.plays_per_game(@side)) %></td>
      <td><%= team.yards(@side) %></td>
      <td><%= '%.1f' % (team.yards_per_game(@side)) %></td>
      <td><%= '%.1f' % (team.yards_per_play(@side)) %></td>
      <td><%= team.third_down_conversions(@side) %></td>
      <td><%= team.third_down_attempts(@side) %></td>
      <td><%= '%.0f' % (team.third_down_percentage(@side)) %></td>
      <td><%= team.penalties(@side) %></td>
      <td><%= team.penalty_yards(@side) %></td>
      <td><%= team.penalty_yards_per_game(@side) %></td>
      <td><%= team.fumbles(@side) %></td>
      <td><%= team.fumbles_lost(@side) %></td>
      <td><%= team.interceptions(@side) %></td>
      <td><%= team.turnovers(@side) %></td>
      <td><%= team.turnovers_per_game(@side) %></td>
    </tr>
  <% end %>
</table>
