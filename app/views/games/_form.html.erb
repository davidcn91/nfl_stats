<%= form_for(@game) do |f| %>

  <h3>Game Info</h3>

  <div class="row">
    <%= f.label :season, class: "text" %>
    <%= f.select :season, @season_collection, include_blank: true %>
  </div>

  <div class="row">
    <%= f.label :week, class: "text" %>
    <%= f.select :week, @week_collection, include_blank: true %>
  </div>

  <div class="row">
    <%= f.label :away_team, "Away Team", class: "text" %>
    <%= f.select :away_team_id, @team_collection, include_blank: true, selected: @away_team %>
  </div>

  <div class="row">
    <%= f.label :home_team, "Home Team", class: "text" %>
    <%= f.select :home_team_id, @team_collection, include_blank: true, selected: @home_team %>
  </div>

  <div class="row">
    <%= f.label :away_score, "Away Score", class: "text" %>
    <%= f.text_field :away_score %>
  </div>

  <div class="row">
    <%= f.label :home_score, "Home Score", class: "text" %>
    <%= f.text_field :home_score %>
  </div>

  <div class="row">
    <%= f.label :overtime, "Overtime", class: "text" %>
    <%= f.check_box(:overtime) %>
  </div>

  <div class="row">
    <%= f.label :spread, class: "text" %> <i>(From perspective of the HOME TEAM)</i>
    <%= f.text_field :spread %>
  </div>

  <div class="action">
    <%= f.submit "Submit Game", class: "btn" %>
  </div>

<% end %>
